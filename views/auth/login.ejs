<md-content layout="row" layout-align="center" flex>
    <md-whiteframe class="md-whiteframe-z3" flex>
        <md-toolbar class="md-accent">
            <span class="md-toolbar-tools">
                <span>{{ 'login.titles.login' | translate }}</span>
            </span>
        </md-toolbar>
        <md-content>
            <md-list layout-md="column" layout-gt-md="row" layout-margin layout-align="center center">
                <% Object.keys(providers).forEach(function (key) { %>
                <md-list-item>
                    <md-item-content ng-click="url('/auth/<%= providers[key].slug %>')" flex-sm>
                        <div layout="row" layout-align="center center">
                            <img src="/images/icons/oauth-<%= key.substring(key.length - 3) %>-icn.svg" style="width: 50px; height: 50px; margin: 10px;"/>
                            <span>{{ 'login.labels.with' | translate }} <%= providers[key].name %></span>
                        </div>
                    </md-item-content>
                </md-list-item>
                <% }) %>
            </md-list>
            <div layout layout-align="center">
                {{ 'login.notices.privacy' | translate }}
            </div>
        </md-content>
    </md-whiteframe>
</md-content>